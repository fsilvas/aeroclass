<div class="row">
  <h2 class="page-header col-md-offset-1 col-md-10 col-xs-10 col-xs-offset-1">Colegio</h2>
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
      <br>
      <%= form_for(school, html:{class:"form-horizontal form-label-left"}) do |f| %>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Nombre:
            </label>
            <div class="col-md-6">
              <%= f.text_field :name, class: "form-control col-md-7 datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Dirección:
            </label>
            <div class="col-md-6">
              <%= f.text_field :address, class: "form-control col-md-7datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">RBD:
            </label>
            <div class="col-md-6">
              <%= f.text_field :rbd, class: "form-control col-md-7 datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Director:
            </label>
            <div class="col-md-6">
              <%= f.text_field :principal, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Email director:
            </label>
            <div class="col-md-6">
              <%= f.text_field :principal_email, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Teléfono director:
            </label>
            <div class="col-md-6">
              <%= f.text_field :principal_phone, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Jefe UTP:
            </label>
            <div class="col-md-6">
              <%= f.text_field :utp, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Email jefe UTP:
            </label>
            <div class="col-md-6">
              <%= f.text_field :utp_email, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Teléfono jefe UTP:
            </label>
            <div class="col-md-6">
              <%= f.text_field :utp_phone, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Coordinador TIC:
            </label>
            <div class="col-md-6">
              <%= f.text_field :tic, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Email coordinador TIC:
            </label>
            <div class="col-md-6">
              <%= f.text_field :tic_email, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Teléfono coordinador TIC:
            </label>
            <div class="col-md-6">
              <%= f.text_field :tic_phone, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">ISP:
            </label>
            <div class="col-md-6">
              <%= f.text_field :isp, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Ancho de banda:
            </label>
            <div class="col-md-6">
              <%= f.select :bandwidth, options_for_select(["Nacional", "Internacional"]), {prompt: "Seleccione ancho de banda"}, {class: "form-control col-md-7  datetime"} %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">N° profesores pre-escolar:
            </label>
            <div class="col-md-6">
              <%= f.text_field :n_teachers_pre, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">N° profesores primaria:
            </label>
            <div class="col-md-6">
              <%= f.text_field :n_teachers_pri, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">N° profesores secundaria:
            </label>
            <div class="col-md-6">
              <%= f.text_field :n_teachers_sec, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-3 col-xs-4 col-xs-offset-2">
              <%= f.submit "Guardar", class: "btn btn-success" %>           
            </div>
            <div class="col-md-2 col-xs-2">
              <%= link_to "Cancelar", schools_path, class: "btn btn-primary" %>            
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

