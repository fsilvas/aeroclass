
<div class="row">
  <h2 class="page-header col-md-offset-1 col-md-10">Colegios</h2>
<div class="col-lg-10 col-lg-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-6 text-left">
          <%= form_tag({action: "show_individual"}, class: "form-inline col-md-11", id:"form-report") do %>
            <%= autocomplete_field_tag("school_name","", autocomplete_school_name_schools_path, update_elements: {id: "#school_id"}, class: "form-control school_name") %>
            <%= text_field_tag :school_id, nil, hidden: true %>  
            <button class="btn btn-primary" style="margin-left: 2em;">Aceptar</button>
          <% end %>
        </div>
        <div class="col-md-6 text-right">
          <%= link_to new_school_path, class: "btn btn-primary btn-small" do %>
            <%= material_icon.school %> +
          <% end %>
        </div>
      </div>
    </div>
    <div class="panel-body">
    <% if @schools.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Cantidad mínima</th>
            <th>Medida</th>
            <th>Neto</th>
            <th colspan="2" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @schools.each do |school| %>
            <tr>
              <td><%= school.name %></td>
              <td><%= school.name %></td>
              <td><%= school.name %></td>
              <td><%= school.name %></td>
              <td class="text-center"><%= link_to 'Editar', edit_school_path(school) %></td>
              <td class="text-center"><%= link_to 'Borrar', school, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
</div>

