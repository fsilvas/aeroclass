<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Rbd</th>
      <th>Principal</th>
      <th>Principal email</th>
      <th>Principal phone</th>
      <th>Utp</th>
      <th>Utp email</th>
      <th>Utp phone</th>
      <th>Tic</th>
      <th>Tic email</th>
      <th>Tic phone</th>
      <th>Isp</th>
      <th>Bandwidth</th>
      <th>N teachers pre</th>
      <th>N teachers pri</th>
      <th>N teachers sec</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.address %></td>
        <td><%= school.rbd %></td>
        <td><%= school.principal %></td>
        <td><%= school.principal_email %></td>
        <td><%= school.principal_phone %></td>
        <td><%= school.utp %></td>
        <td><%= school.utp_email %></td>
        <td><%= school.utp_phone %></td>
        <td><%= school.tic %></td>
        <td><%= school.tic_email %></td>
        <td><%= school.tic_phone %></td>
        <td><%= school.isp %></td>
        <td><%= school.bandwidth %></td>
        <td><%= school.n_teachers_pre %></td>
        <td><%= school.n_teachers_pri %></td>
        <td><%= school.n_teachers_sec %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

