<p id="notice"><%= notice %></p>

<h1>Values</h1>

<table>
  <thead>
    <tr>
      <th>Dolar</th>
      <th>Euro</th>
      <th>Tablet cost</th>
      <th>Book cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @values.each do |value| %>
      <tr>
        <td><%= value.dolar %></td>
        <td><%= value.euro %></td>
        <td><%= value.tablet_cost %></td>
        <td><%= value.book_cost %></td>
        <td><%= link_to 'Show', value %></td>
        <td><%= link_to 'Edit', edit_value_path(value) %></td>
        <td><%= link_to 'Destroy', value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

