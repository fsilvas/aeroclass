
<div class="row">
  <h2 class="page-header col-md-offset-1 col-md-10 col-xs-10 col-xs-offset-1">Valores fijos</h2>
  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div class="panel panel-default">
      <div class="panel-body">
      <br>
      <%= form_for(value, html:{class:"form-horizontal form-label-left"}) do |f| %>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Dolar:
            </label>
            <div class="col-md-6">
              <%= f.text_field :dolar, class: "form-control col-md-7 datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Euro:
            </label>
            <div class="col-md-6">
              <%= f.text_field :euro, class: "form-control col-md-7datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">Costo tablet:
            </label>
            <div class="col-md-6">
              <%= f.text_field :tablet_cost, class: "form-control col-md-7 datetime" %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-4" for="number">C.I. Libro:
            </label>
            <div class="col-md-6">
              <%= f.text_field :book_cost, class: "form-control col-md-7  datetime" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-md-4 col-md-offset-3 col-xs-4 col-xs-offset-2">
              <%= f.submit "Guardar", class: "btn btn-success" %>           
            </div>
            <div class="col-md-2 col-xs-2">
              <%= link_to "Cancelar", root_path, class: "btn btn-primary" %>            
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
