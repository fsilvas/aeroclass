
<div class="row">
  <h2 class="page-header col-md-offset-2 col-md-8">Nuevo usuario</h2>
  <div class="col-lg-8 col-lg-offset-2">
    <div class="panel panel-default">
      <div class="panel-body">
      <br>
      <%= form_for(@user, url: all_users_path) do |f| %>
            <div class="form-group">
                    <label>Email</label>
                    <%= f.email_field :email, class: "form-control col-md-12" %>
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    <%= f.text_field :name, class: "form-control col-md-12" %>
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    <%= f.text_field :last_name, class: "form-control col-md-12" %>
                </div>
                <div class="form-group">
                    <label>Rol</label>
                    <%= select_tag "role", options_for_select([["Administrador", "1"], ["Vendedor", "2"]]), { prompt: "Seleccione rol", class: 'form-control'} %>
                </div>
                
                <div class="form-group">
                    <div class="col-md-5 col-md-offset-3">
                      <%= f.submit "Guardar", class: "btn btn-success" %>           
                    </div>
                    <div class="col-md-2">
                      <%= link_to "Cancelar", index_users_path, class: "btn btn-primary" %>            
                    </div>
                </div> 

        <% end %>
      </div>
    </div>
  </div>
</div>